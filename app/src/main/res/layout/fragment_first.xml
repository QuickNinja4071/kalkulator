<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nr1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/numer6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/numer5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numer9"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/numer1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/numer2"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numer4"
        app:layout_constraintVertical_bias="0.14" />

    <Button
        android:id="@+id/numer2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/numer3"
        app:layout_constraintTop_toBottomOf="@+id/numer5"
        app:layout_constraintVertical_bias="0.14" />

    <Button
        android:id="@+id/numer7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="396dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/numer8"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/numer4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/numer5"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numer7" />

    <Button
        android:id="@+id/numer5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/numer6"
        app:layout_constraintTop_toBottomOf="@+id/numer8" />

    <Button
        android:id="@+id/numer3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numer6"
        app:layout_constraintVertical_bias="0.159" />

    <Button
        android:id="@+id/numer8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/numer9"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/numer9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:text="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/numer0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numer1"
        app:layout_constraintVertical_bias="0.435" />

    <Button
        android:id="@+id/rownanie"
        android:layout_width="147dp"
        android:layout_height="47dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toEndOf="@+id/numer0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925" />

    <Button
        android:id="@+id/suma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/numer7"
        app:layout_constraintEnd_toStartOf="@+id/roznica"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mnozenie"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/roznica"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="264dp"
        android:layout_marginRight="264dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/numer8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dzielenie"
        app:layout_constraintVertical_bias="0.218" />

    <Button
        android:id="@+id/mnozenie"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:text="x"
        app:layout_constraintEnd_toStartOf="@+id/dzielenie"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dzielenie"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="260dp"
        android:layout_marginRight="260dp"
        android:text=":"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/okienko_wyniku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        app:boxBackgroundColor="#AAF3B2"
        app:counterTextColor="black"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="61dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="wynik" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>